@model Trabalhoconcessionaria.Models.Veiculo//Aqui cria a view para editar as informações.

@{
    ViewData["Title"] = "Editar Veículo";
}

<h2>Editar Veículo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3" >
    <label>Marca:</label>
    <input type="text" class="form-control" name="marca" value="@Model.Marca" required /><br />

    <div class="mb-3" >
    <label>Modelo:</label>
    <input type="text" class="form-control" name="modelo" value="@Model.Modelo" required /><br />
    
    <div class="mb-3" >
    <label>Ano:</label>
    <input type="number" class="form-control" name="ano" value="@Model.Ano" required /><br />

    <div class="mb-3" >
    <label>Placa:</label>
    <input type="text" class="form-control" name="placa" value="@Model.Placa" required /><br />

    @if (Model is Trabalhoconcessionaria.Models.Carro carro)
    {
        <label>Quantidade de Portas:</label>
        <input type="number" name="quantidadePortas" value="@carro.QuantidadePortas" min="2" max="5" />

        <br />
    }
    else if (Model is Trabalhoconcessionaria.Models.Moto moto)
    {
        <div>
        <label>Tem carenagem?</label>
        <input type="checkbox" name="temCarenagem" value="true" @(moto.TemCarenagem ? "checked" : "") />
        </div>

        <br />
    }
    @if (Model is Van van)
    
    {
    <div>
    <label>Capacidade de Passageiros:</label>
    <input type="number" name="capacidadePassageiros" value="@van.CapacidadePassageiros" /><br/>
    </div>
    }


    <button type="submit" class="btn btn-primary">Salvar</button>
    
    

</form>


    <a asp-action="Lista" class="btn btn-primary">Voltar</a>

